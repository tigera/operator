FROM registry.access.redhat.com/ubi8/ubi-minimal:8.1
ARG GIT_VERSION=unknown
LABEL name="Calico Operator-init" \
      vendor="Project Calico" \
      version=$GIT_VERSION \
      release="1" \
      summary="Calico Operator-init handles AWS security group setup for OpenShift clusters" \
      description="Calico Operator-init handles AWS security group setup for OpenShift clusters" \
      maintainer="Laurence Man <laurence@tigera.io>"

ENV USER_UID=1000 \
    USERNAME=init

# Add in top-level license file
RUN mkdir /licenses
COPY LICENSE /licenses

# Install CentOS repo for packages not in ubi repo.
COPY build/init/centos.repo /etc/yum.repos.d/

RUN microdnf install \
    jq \
    # Needed for pip
    python3 \
    # Needed for adduser.
    shadow-utils

RUN pip3 install awscli && \
    useradd --uid $USER_UID $USERNAME

COPY build/init/bin/kubectl /usr/local/bin/kubectl
RUN chmod +x /usr/local/bin/kubectl

COPY build/init/*.sh /
RUN chmod +x /*.sh
ENTRYPOINT ["/init.sh"]
USER ${USER_UID}
