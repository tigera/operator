{
  "apiVersion": "projectcalico.org/v3",
  "kind": "NetworkPolicy",
  "metadata": {
    "name": "calico-system.es-kube-controller-access",
    "namespace": "calico-system"
  },
  "spec": {
    "order": 1,
    "tier": "calico-system",
    "selector": "k8s-app == 'es-calico-kube-controllers'",
    "types": [
      "Egress"
    ],
    "egress": [
      {
        "action": "Allow",
        "protocol": "UDP",
        "destination": {
          "namespaceSelector": "projectcalico.org/name == 'openshift-dns'",
          "selector": "dns.operator.openshift.io/daemonset-dns == 'default'",
          "ports": [
            5353
          ]
        }
      },
      {
        "action": "Allow",
        "protocol": "TCP",
        "destination": {
          "namespaceSelector": "projectcalico.org/name == 'openshift-dns'",
          "selector": "dns.operator.openshift.io/daemonset-dns == 'default'",
          "ports": [
            5353
          ]
        }
      },
      {
        "action": "Allow",
        "protocol": "TCP",
        "destination": {
          "ports": [
            443,
            6443,
            12388
          ]
        }
      },
      {
        "action": "Allow",
        "protocol": "TCP",
        "destination": {
          "selector": "k8s-app == 'tigera-secure-es-gateway'",
          "namespaceSelector": "projectcalico.org/name == 'tigera-elasticsearch'",
          "ports": [
            5554
          ]
        }
      },
      {
        "action": "Allow",
        "protocol": "TCP",
        "destination": {
          "selector": "k8s-app == 'calico-manager'",
          "namespaceSelector": "projectcalico.org/name == 'calico-system'",
          "ports": [
            9443
          ]
        }
      }
    ]
  }
}
