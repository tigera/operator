{
  "apiVersion": "projectcalico.org/v3",
  "kind": "NetworkPolicy",
  "metadata": {
    "name": "allow-tigera.kube-controller-access",
    "namespace": "calico-system"
  },
  "spec": {
    "order": 1,
    "tier": "allow-tigera",
    "selector": "k8s-app == 'calico-kube-controllers'",
    "types": [
      "Egress","Ingress"
    ],
    "egress": [
      {
        "action": "Allow",
        "protocol": "UDP",
        "destination": {
          "namespaceSelector": "projectcalico.org/name == 'openshift-dns'",
          "selector": "dns.operator.openshift.io/daemonset-dns == 'default'",
          "ports": [
            5353
          ]
        }
      },
      {
        "action": "Allow",
        "protocol": "TCP",
        "destination": {
          "namespaceSelector": "projectcalico.org/name == 'openshift-dns'",
          "selector": "dns.operator.openshift.io/daemonset-dns == 'default'",
          "ports": [
            5353
          ]
        }
      },
      {
        "action": "Allow",
        "protocol": "TCP",
        "destination": {
          "ports": [
            443,
            6443,
            12388
          ]
        }
      },
      {
        "action": "Allow",
        "protocol": "TCP",
        "destination": {
          "selector": "k8s-app == 'tigera-manager'",
          "namespaceSelector": "projectcalico.org/name == 'tigera-manager'",
          "ports": [
            9443
          ]
        }
      }
    ],
    "ingress": [
      {
        "action": "Allow",
        "protocol": "TCP",
        "source": {
          "selector": "k8s-app == 'tigera-prometheus'",
          "namespaceSelector": "name == 'tigera-prometheus'"
        },
        "destination": {
          "ports": [
            "9094"
          ]
        }
      }
    ]
  }
}
