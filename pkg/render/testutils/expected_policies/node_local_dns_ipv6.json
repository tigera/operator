{
  "apiVersion": "projectcalico.org/v3",
  "kind": "GlobalNetworkPolicy",
  "metadata": {
    "name": "allow-tigera.node-local-dns"
  },
  "spec": {
    "tier":"allow-tigera",
    "order":10,
    "selector": "projectcalico.org/namespace in {'calico-system','tigera-compliance','tigera-dex','tigera-elasticsearch','tigera-fluentd','tigera-intrusion-detection','tigera-kibana','tigera-manager','tigera-eck-operator','tigera-packetcapture','tigera-prometheus','tigera-skraper'}",
    "egress":[
       {
         "action":"Allow",
         "protocol":"UDP",
         "source":{},
         "destination":{
           "nets": ["2002:a60:a::"],
           "ports": ["53"]
         }
       }
    ],
    "types":[
      "Egress"
    ]
  }
}
