{
  "apiVersion": "projectcalico.org/v3",
  "kind": "NetworkPolicy",
  "metadata": {
    "name": "calico-system.tigera-packetcapture",
    "namespace": "tigera-packetcapture"
  },
  "spec": {
    "order": 1,
    "tier": "calico-system",
    "selector": "k8s-app == 'tigera-packetcapture'",
    "types": [
      "Ingress",
      "Egress"
    ],
    "ingress": [
      {
        "action": "Allow",
        "protocol": "TCP",
        "source": {
          "selector": "k8s-app == 'calico-manager'",
          "namespaceSelector": "projectcalico.org/name == 'calico-system'"
        },
        "destination": {
          "ports": [
            8444
          ]
        }
      }
    ],
    "egress": [
      {
        "action": "Allow",
        "protocol": "TCP",
        "destination": {
          "services": {
            "name": "kubernetes",
	    "namespace": "default"
	  }
        }
      },
      {
        "action": "Allow",
        "protocol": "UDP",
        "destination": {
          "namespaceSelector": "projectcalico.org/name == 'kube-system'",
          "selector": "k8s-app == 'kube-dns'",
          "ports": [
            53
          ]
        }
      },
      {
        "action": "Allow",
        "protocol": "TCP",
        "destination": {
          "namespaceSelector": "projectcalico.org/name == 'tigera-dex'",
          "selector": "k8s-app == 'tigera-dex'",
          "ports": [
            5556
          ]
        }
      }
    ]
  }
}
