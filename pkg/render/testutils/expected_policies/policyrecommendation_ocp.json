{
  "apiVersion": "projectcalico.org/v3",
  "kind": "NetworkPolicy",
  "metadata": {
    "name": "allow-tigera.tigera-policy-recommendation",
    "namespace": "tigera-policy-recommendation"
  },
  "spec": {
    "order": 1,
    "tier": "allow-tigera",
    "selector": "k8s-app == 'tigera-policy-recommendation'",
    "types": [
      "Egress"
    ],
    "ingress": [],
    "egress": [
      {
        "action": "Allow",
        "protocol": "TCP",
        "destination": {
          "services": {
            "name": "kubernetes",
            "namespace": "default"
          }
        }
      },
      {
        "action": "Allow",
        "protocol": "TCP",
        "destination": {
          "namespaceSelector": "projectcalico.org/name == 'tigera-manager'",
          "selector": "k8s-app == 'tigera-manager'",
          "ports": [
            9443
          ]
        }
      },
      {
        "action": "Allow",
        "protocol": "TCP",
        "source": {
        },
        "destination": {
          "selector": "k8s-app == 'tigera-linseed'",
          "namespaceSelector": "projectcalico.org/name == 'tigera-elasticsearch'",
          "ports": [
            8444
          ]
        }
      },
      {
        "action": "Allow",
        "protocol": "UDP",
        "destination": {
          "namespaceSelector": "projectcalico.org/name == 'openshift-dns'",
          "selector": "dns.operator.openshift.io/daemonset-dns == 'default'",
          "ports": [
            5353
          ]
        }
      },
      {
        "action": "Allow",
        "protocol": "TCP",
        "destination": {
          "namespaceSelector": "projectcalico.org/name == 'openshift-dns'",
          "selector": "dns.operator.openshift.io/daemonset-dns == 'default'",
          "ports": [
            5353
          ]
        }
      }
    ]
  }
}
